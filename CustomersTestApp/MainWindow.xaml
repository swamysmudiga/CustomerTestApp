<Window x:Class="CustomersTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CustomersTestApp.ViewModels"
        xmlns:cta="clr-namespace:CustomersTestApp"
        xmlns:views="clr-namespace:CustomersTestApp.Views"
        Title="Customer Editor" Height="600" Width="800">
    <Window.Resources>
        <Style x:Key="WatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <TextBox x:Name="textBox" Text="{TemplateBinding Text}" />
                            <TextBlock x:Name="watermark"
                                       Text="Filter text..."
                                       IsHitTestVisible="False"
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="5,0,0,0"
                                       Visibility="Collapsed" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="watermark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="CustomerTemplate">
            <StackPanel>
                <TextBlock Text="Customer Details" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Name:" />
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Email:" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Discount:" />
                <TextBox Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="ID:" />
                <TextBox Text="{Binding Id}" IsReadOnly="True" />
                <Button Content="Save" Command="{Binding DataContext.SaveCustomerCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="EmptyTemplate">
            <views:EmptyView />
        </DataTemplate>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10">
            <TextBox Width="200" Margin="0,0,10,0" Style="{StaticResource WatermarkTextBoxStyle}" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox Width="100" SelectedValue="{Binding FilterType, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="Name" />
                <ComboBoxItem Content="Email" />
            </ComboBox>
        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding CustomersCollectionView}" SelectedItem="{Binding SelectedCustomer}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Email}" />
                        <TextBlock Text="{Binding Discount}" />
                        <Button Content="Remove" 
                                Command="{Binding DataContext.RemoveCustomerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                CommandParameter="{Binding}" 
                                IsEnabled="{Binding CanRemove}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Content="Add New Customer" Command="{Binding ShowAddCustomerFormCommand}" Margin="0,10,0,0" />
            <ContentControl Content="{Binding SelectedCustomer}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource CustomerTemplate}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedCustomer}" Value="{x:Null}">
                                <Setter Property="ContentTemplate" Value="{StaticResource EmptyTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
            <StackPanel Visibility="{Binding IsAddCustomerFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="New Customer Details" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Name:" />
                <TextBox Text="{Binding NewCustomerName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Email:" />
                <TextBox Text="{Binding NewCustomerEmail, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Discount:" />
                <TextBox Text="{Binding NewCustomerDiscount, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Save" Command="{Binding AddCustomerCommand}" Margin="10,0,0,0" />
                <Button Content="Cancel" Command="{Binding HideAddCustomerFormCommand}" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
